<?xml version="1.0" encoding="utf-8"?>
<widget icon="eicon-edit" cat="basic">
  
    <fieldset id="panenewwidget" tab="tab" note="A note about this panel" label="New Wiget">
      <field 
        type="text" 
        name="newwidgettext" 
		default="Your New Elementor Widget" 
        label="Title" 
      />
	  <field 
	  type="textarea" 
	  name="newwidgettextarea" 
	  default="This is a new widget that was auto generated by the CMSE widget library. It is now ready to be developed into whatever is desired" 
	  label="The Text" 
	  />
	  <field 
	  type="url" 
	  name="newwidgetlink" 
	  default="{'url':'https://github.com/WebsiteDons/elementor-widget-creator-library','is_external':'true'}"  
	  label="User guide link" 
	  />
     </fieldset>
	  
     <!-- STYLE tab group -->
     <fieldset id="panenewstyle" tab="tabstyle" note="Set the styling of stuff" label="Item Styling">
	     <field
		    type="controlgroup"
		    gtype="bg"
		    gtypes="classic,gradient"
		    name="setbgcolor"
		    label="Set background"
		    />
	     <field
		    type="controlgroup"
		    gtype="typo"
		    name="fontyset"
		    label="Font typography"
		    />
	     <field 
		    type="color"
		    name="btncolor"
		    label="Color a button background"
		    />
	     <field 
		    type="code"
		    name="customcss"
		    label="Custom CSS"
		    />
     </fieldset>
  
</widget>
